{
    "name": "cinnamon-secrets-app",
    "version": "1.0.0",
    "description": "A simple bakery management app for Cinnamon Secrets.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder"
    },
    "devDependencies": {
        "electron": "^23.1.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.yourdomain.cinnamonsecrets",
        "productName": "Cinnamon Secrets",
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "build/logo_mac.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "build/logo_win.ico"
        }
    }
}
